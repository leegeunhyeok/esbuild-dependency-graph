{
  "name": "esbuild-dependency-graph",
  "version": "0.4.1",
  "description": "Dependency graph helper based on esbuild's metafile",
  "repository": "git@github.com:leegeunhyeok/esbuild-dependency-graph.git",
  "license": "MIT",
  "author": "leegeunhyeok <dev.ghlee@gmail.com>",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.cjs",
    "dist/**/*.mjs",
    "dist/**/*.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "node -r @swc-node/register build/index.ts && tsc -p tsconfig.build.json",
    "demo": "node -r @swc-node/register demo/index.ts",
    "prepublishOnly": "rm -rf ./dist && yarn build",
    "release": "release-it",
    "test": "jest"
  },
  "prettier": "@vercel/style-guide/prettier",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@jest/globals": "^29.7.0",
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.101",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@vercel/style-guide": "^5.1.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prettier": "^5.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "esbuild": "*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}"
    },
    "github": {
      "release": true
    }
  }
}
