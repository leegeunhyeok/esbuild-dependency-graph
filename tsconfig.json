{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "dist"]
}
