{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
  },
  "include": ["src/**/*.ts", "demo/**/*.ts"]
}
